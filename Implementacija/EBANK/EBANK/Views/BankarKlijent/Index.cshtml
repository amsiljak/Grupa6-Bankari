                @Html.DisplayFor(modelItem => item.BrojTelefona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojLicneKarte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zanimanje)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
