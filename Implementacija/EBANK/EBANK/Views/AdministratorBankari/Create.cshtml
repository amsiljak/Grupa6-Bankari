@model EBANK.Models.Bankar

@{
    ViewData["Title"] = "Create";
}

<h1>Dodavanje bankara</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KorisnickoIme" class="control-label"></label>
                <input asp-for="KorisnickoIme" class="form-control" />
                <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lozinka" class="control-label"></label>
                <input asp-for="Lozinka" class="form-control" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
            <label asp-for="MjestoZaposlenja" class="control-label"></label>
            <div class="form-group">
                <label asp-for="MjestoZaposlenja.Latitude" class="control-label"></label>
                <input asp-for="MjestoZaposlenja.Latitude" class="form-control" />
                <span asp-validation-for="MjestoZaposlenja.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MjestoZaposlenja.Longitude" class="control-label"></label>
                <input asp-for="MjestoZaposlenja.Longitude" class="form-control" />
                <span asp-validation-for="MjestoZaposlenja.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MjestoZaposlenja.Naziv" class="control-label"></label>
                <input asp-for="MjestoZaposlenja.Naziv" class="form-control" />
                <span asp-validation-for="MjestoZaposlenja.Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
