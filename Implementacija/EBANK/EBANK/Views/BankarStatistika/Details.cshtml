<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Uredi</a>
</div>



<div class="row" style="margin-top: 20px;">
    <div class="col-sm-8" padding: 20px;">
        <h4 class="display-6" style="margin-bottom: 10px;text-align: left;">Računi klijenta:</h4>
    </div>
</div> 

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => new Racun().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => new Racun().StanjeRacuna)
            </th>
            <th>
                @Html.DisplayNameFor(model => new Racun().VrstaRacuna)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in racuni)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StanjeRacuna) KM
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VrstaRacuna)
                </td>
            </tr>
        }
    </tbody>
</table>





<div class="row" style="margin-top: 20px;">
    <div class="col-sm-8" padding: 20px;">
        <h4 class="display-6" style="margin-bottom: 10px;text-align: left;">Transakcije klijenta:</h4>

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => new Transakcija().SaRacuna)
